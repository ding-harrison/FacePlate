#include <Servo.h>
#include <math.h>

Servo myservo;  // create servo object to control a servo
// twelve servo objects can be created on most boards

float PersonX, PersonY; //(1) PersonX and PersonY (position of person in relation to a coordinate system)
float MotorX, MotorY; // (2) MotorX and MotorY (position of motor in relation to such coordinate system)
float deltaX, deltaY; //(3) deltaX and deltaY (difference between the position of person in relationship to the position of the motor
float angleRad, angleDeg;//(4) angleRad and angleDeg (angle of motor to person in both radians and degrees).
const float pi = 3.14159265359;

void setup() {
  Serial.begin(9600);
  myservo.attach(9);  // attaches the servo on pin 9 to the servo object
}

void motorTurn(int personX, int personY){
  deltaX = PersonX - MotorX;  //difference btwn pos of person and motor
  deltaY = PersonY - MotorY;

  if (deltaX &gt; 0 ) {
    angleRad = atan(deltaY/deltaX);  //convert x & y coordinates to angles (rad)
  }
  else {
    angleRad = pi + atan(deltaY/deltaX);
  }
  angleDeg = angleRad * (180/pi); // convert the angle from radians to degrees

   if (angleDeg&gt;180) {
    angleDeg = -(360-angleDeg); //keep the angles between -180 to 180 degrees
  }
  myservo.write(angleDeg);  // This should make the Servo rotate.
  delay(1000);
 
}

void loop() {
 while(true){
  
 }
  
  
}
